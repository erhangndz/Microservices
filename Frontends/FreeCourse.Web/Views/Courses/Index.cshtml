@model List<CourseViewModel>
@{
    ViewData["Title"] = "Index";
}



<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kurslar</h5>
                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>Kurs</th>
                                <th>Fiyat</th>
                                <th>Süre</th>
                            </tr>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td></td>
                                        <td>@item.Name</td>
                                        <td>@item.Price ₺</td>
                                        <td>@item.Feature.Duration</td>
                                    </tr>
                                }
                            </tbody>
                        </thead>
                    </table>

                }
                else
                {
                    <div class="alert alert-info">Kayıtlı kurs bulunamadı</div>
                }
            </div>
        </div>
    </div>
</div>

